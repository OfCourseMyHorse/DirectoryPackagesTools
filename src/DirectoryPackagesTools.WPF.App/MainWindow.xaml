<Window x:Class="DirectoryPackagesTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"        
        xmlns:local="clr-namespace:DirectoryPackagesTools"
        xmlns:data="clr-namespace:DirectoryPackagesTools;assembly=DirectoryPackagesTools"
        mc:Ignorable="d"
        Title="Directory Packages Manager" Height="450" Width="800">    
    
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Open..." Click="MenuItem_Load" />
                <MenuItem Header="Save" Click="MenuItem_Save" />
                <MenuItem Header="Save + Commit" Click="MenuItem_SaveAndCommit" />
            </MenuItem>
        </Menu>

        <StatusBar DockPanel.Dock="Bottom">
            <ProgressBar Width="200" Name="myProgressBar" Height="20" Visibility="Collapsed"  />
        </StatusBar>

        <GroupBox Header="Sources" DockPanel.Dock="Top">
            <ItemsControl ItemsSource="{Binding Repositories}" />
        </GroupBox>

        <GroupBox Header="Packages">
            <TabControl>
                <TabItem Header="System Packages">
                    <local:PackagesList DataContext="{Binding SystemPackages}" />
                </TabItem>
                <TabItem Header="Test Packages">
                    <local:PackagesList DataContext="{Binding TestPackages}" />
                </TabItem>
                <TabItem Header="User Packages">
                    <local:PackagesList DataContext="{Binding UserPackages}" />
                </TabItem>
            </TabControl>
            
        </GroupBox>
        
    </DockPanel>
</Window>
