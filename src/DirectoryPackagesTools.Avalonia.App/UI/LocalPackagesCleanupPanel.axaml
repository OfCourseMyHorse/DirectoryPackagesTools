<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:l="using:DirectoryPackagesTools"
             mc:Ignorable="d"
             x:Class="DirectoryPackagesTools.LocalPackagesCleanupPanel" MaxHeight="600">
  
  
  <Grid RowDefinitions="auto * auto" Margin="4">

    <Button Margin="4" Grid.Row="0" Content="Find Packages" Click="_OnClick_FindPackagesToDelete" />

    <DataGrid Margin="4" Grid.Row="1" x:Name="myPackagesToDelete" x:DataType="l:CachePackageInfo" AutoGenerateColumns="False" >
      <DataGrid.Columns>        
        <DataGridTextColumn Header="Package" Binding="{Binding PackageName}" />
        <DataGridTextColumn Header="Version" Binding="{Binding PackageVersion}" />
        <DataGridTextColumn Header="Disk Size" Binding="{Binding PackageDiskSize}" />        
      </DataGrid.Columns>
    </DataGrid>
    
    <Button Margin="4" Grid.Row="2" HorizontalAlignment="Center" DockPanel.Dock="Bottom" Content="Delete All" Click="_OnClick_DeleteListedPackages" />    
    
  </Grid>
  
</UserControl>
